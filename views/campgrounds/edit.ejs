<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			edit <%= campground.name%>
		</h1>
		<div style="width:30%; margin:25px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type ="text" class="form-control" value="<%= campground.name%>" name="campground[name]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" value="<%= campground.image%>" name="campground[image]">
				</div>
				<div class="form-group">
					<input type ="text" class="form-control" value="<%= campground.description%>" name="campground[description]">
				</div>
				<div class="form-group">
					<input type ="number" class="form-control" value="<%= campground.price%>" name="campground[price]" step="0.01" min="0.0">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">
					submit
				</button>
				</div>	
				
			</form>
			<a href="/campgrounds">go back</a>
		</div>

		
	</div>
</div>
<%- include("../partials/footer") %>
